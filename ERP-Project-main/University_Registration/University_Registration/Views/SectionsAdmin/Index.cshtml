<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-hover table-responsive">
    <tr>
        <th>
            Section Number
        </th>
        <th>
            Section Time
        </th>
        <th>
            Section Day
        </th>
        <th>
            Course Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SectionNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SectionTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SectionDay)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Subject.Name)*@
                @item.Subject.Name

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Section_ID }, new { @class = "btn btn-success" })
                @Html.ActionLink("Details", "Details", new { id = item.Section_ID }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Section_ID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
